<script>
    // --- DOM මූලිකාංග ලබා ගැනීම ---
    const chatContainer = document.getElementById('chat-container');
    const userInput = document.getElementById('userInput');
    const sendBtn = document.getElementById('sendBtn');
    const mainContent = document.getElementById('main-content');
    
    // --- Dropdown මූලිකාංග ---
    const fastBtn = document.getElementById('fast-btn');
    const orbixBtn = document.getElementById('orbix-btn');
    const fastOptions = document.getElementById('fast-options');
    const orbixOptions = document.getElementById('orbix-options');

    // --- API සැකසුම් ---
    const apiKey = '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';
    const apiUrl = 'https://api.groq.com/openai/v1/chat/completions';
    
    let currentModel = 'meta-llama/llama-4-scout-17b-16e-instruct'; // Default model
    let isFirstMessage = true;

    // --- Event Listeners ---

    // Send button එක ක්ලික් කළ විට
    sendBtn.addEventListener('click', sendMessage);
    // Input එකේ Enter press කළ විට
    userInput.addEventListener('keyup', (event) => {
        if (event.key === 'Enter') {
            sendMessage();
        }
    });
    
    // Input එකේ text එකක් ඇති විට send button එක active කිරීම
    userInput.addEventListener('input', () => {
        if (userInput.value.trim() !== '') {
            sendBtn.classList.add('active');
        } else {
            sendBtn.classList.remove('active');
        }
    });

    // Dropdown මෙනු සඳහා Event Listeners
    fastBtn.addEventListener('click', () => {
        orbixOptions.style.display = 'none'; // අනෙක් menu එක වසන්න
        fastOptions.style.display = fastOptions.style.display === 'block' ? 'none' : 'block';
    });
    
    orbixBtn.addEventListener('click', () => {
        fastOptions.style.display = 'none'; // අනෙක් menu එක වසන්න
        orbixOptions.style.display = orbixOptions.style.display === 'block' ? 'none' : 'block';
    });

    // පිටත ක්ලික් කළ විට dropdown වැසීම
    document.addEventListener('click', (event) => {
        if (!fastBtn.contains(event.target) && !fastOptions.contains(event.target)) {
            fastOptions.style.display = 'none';
        }
        if (!orbixBtn.contains(event.target) && !orbixOptions.contains(event.target)) {
            orbixOptions.style.display = 'none';
        }
    });


    // --- Functions ---

    // පණිවිඩය යැවීමේ function එක
    async function sendMessage() {
        const userText = userInput.value.trim();
        if (userText === '') return;

        // පළමු පණිවිඩය නම්, welcome screen එක ඉවත් කිරීම
        if (isFirstMessage) {
            chatContainer.innerHTML = '';
            isFirstMessage = false;
        }

        // User ගේ message එක UI එකට එකතු කිරීම
        addMessageToUI(userText, 'user');
        userInput.value = '';
        sendBtn.classList.remove('active'); // Button එක නැවත inactive කිරීම

        // AI response එක බලාපොරොත්තුවෙන් loading indicator එක පෙන්වීම
        const loadingIndicator = addMessageToUI('typing...', 'loading');

        try {
            // API එකට request එක යැවීම
            const response = await fetch(apiUrl, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${apiKey}`,
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    model: currentModel,
                    messages: [{ role: 'user', content: userText }]
                })
            });

            if (!response.ok) {
                throw new Error(`API error! Status: ${response.status}`);
            }

            const data = await response.json();
            const aiText = data.choices[0].message.content;

            // Loading indicator එක ඉවත් කර AI ගේ පිළිතුර එකතු කිරීම
            loadingIndicator.remove();
            addMessageToUI(aiText, 'ai');

        } catch (error) {
            console.error('Error fetching AI response:', error);
            // Error එකක් ආවොත්, loading indicator එක ඉවත් කර error message එකක් පෙන්වීම
             loadingIndicator.remove();
            addMessageToUI('Sorry, something went wrong. Please try again.', 'ai');
        }
    }

    // UI එකට message bubbles එකතු කිරීමේ function එක
    function addMessageToUI(text, sender) {
        const messageElement = document.createElement('div');
        if (sender === 'user') {
            messageElement.className = 'chat-message user-message';
        } else if (sender === 'ai') {
            messageElement.className = 'chat-message ai-message';
        } else if (sender === 'loading') {
            messageElement.className = 'loading-indicator';
        }
        
        messageElement.textContent = text;
        chatContainer.appendChild(messageElement);
        
        // අලුත්ම message එකට scroll කිරීම
        mainContent.scrollTop = mainContent.scrollHeight;
        return messageElement;
    }

</script>
</body>
</html>
